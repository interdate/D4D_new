{% extends "frontend/mobile-layout.html.twig" %}

{% block content %}


	<div class="mid_content">
		{% if app.user %}
			{% if(banners) %}
				{% set i = random(banners|length -1) %}
				<a target="_blank" href="{{ banners[i].href }}">
					<img style="width: 88%; margin: auto" class="banner" src="{{ asset(banners[i].img) }}" style="width:100%;margin: 0 auto;" data-id="{{ banners[i].id }}"/>
				</a>
			{% endif %}
		<div class="mid_search">
			<div class="mid_title mhover"><h3>{% trans %}חיפוש מהיר{% endtrans %}</h3></div>
			<div class="msearch_div ms_div2">

				<form action="{{ path('user_search_results') }}" method="post" class="qs">
					<div class="between cf">
						<div class="ls_left">{% trans %}מין{% endtrans %}</div>
						<div class="ls_right">
							{{ form_widget(form.gender) }}
						</div>
					</div>
					<div class="lsulookingForGender cf" style="margin-top: 32px;">
						<div class="ls_right" style="width:45px;">{% trans %}שמחפשים{% endtrans %}</div>
						<div class="ls_left checkdiv" style="width:300px; margin: -2px 48px 10px -20px">
							{% for lookingForGender in form.lookingForGender %}
								<div class="lchk cf" style="width: 30%">
									<div class="ui checkbox">
										{{ form_widget(lookingForGender) }}
										{{ form_label(lookingForGender) }}
									</div>
								</div>
							{% endfor %}
						</div>
					</div>
					<input type="hidden" class="form_helper_url" value="{{ path('quick_search_helper') }}">

					<div class="mlocation">

						<div class="m-between">
						{#	<div class="ms_left">{% trans %}מרחק{% endtrans %}</div>
							<div class="ms_right">
                                {{ form_widget(form.distance) }}
								<span class="dist"></span>
							</div>#}
							<div class="ms_left" style="display: inline-block;">{% trans %}גיל:{% endtrans %}</div>
							<div class="ms_right">
								{{ form_widget(form.ageFrom) }}
								<span class="band">עד</span>
								{{ form_widget(form.ageTo) }}
							</div>

						</div>

						<div class="msarea-left">
							<h6>{% trans %}אזור{% endtrans %}</h6>
							<div class="ma_right checkdiv">

								{% for region in form.region %}
									<div class="lchk{% if loop.index % 2 == 0 %} lchkright{% endif %} cf">
										<div class="ui checkbox">
											{{ form_widget(region) }}
											{{ form_label(region) }}
										</div>
									</div>
								{% endfor %}

							</div>
							<div class="ms_but"><input type="submit" value="{% trans %}חיפוש{% endtrans %}"></div>
							<div class="clr"></div>
						</div>
						<div class="clr"></div>
					</div>

				</form>

				<div class="left_sep"><span>{% trans %}או{% endtrans %}</span></div>

				<form action="{{ path('user_search_results') }}" method="post" class="qs">

					<input type="hidden" id="quickSearch_filter" name="quickSearch[filter]" value="lastActivity">

					<div class="msearch_nick cf">
						<div class="s_nick_lft cf">
							{{ form_label(form.username) }}
							{{ form_widget(form.username) }}
						</div>
						<div class="ms_but"><input type="submit" value="{% trans %}חיפוש{% endtrans %}"></div>
						<div class="clr"></div>
					</div>

				</form>


				<div class="left_sep"><span>{% trans %}או{% endtrans %}</span></div>
				<div class="ms_advbut"><a href="{{ path('user_search_advanced') }}">{% trans %}חיפוש מתקדם{% endtrans %}</a></div>
			</div>
		</div>
		{% endif %}

		<div class="new-mem">

			<div class="mid_title"><h3>{{ header }}</h3></div>
			{% if app.user %}

				{% set filter = data is not defined ? 'lastActivity' : data.filter %}

				<div class="member cf">
					<div class="mem-left">{% trans %}מיין לפי{% endtrans %}</div>
					<div class="mem-right">
						<div class="sortby">
							<select id="search_filter">
								<option value="new"{% if filter == 'new' %} selected="selected"{% endif %}>{% trans %}חברים חדשים{% endtrans %}</option>
								{% if data.withPhoto is not defined or not data.withPhoto %}
									<option value="photo" {% if filter == 'photo' %} selected="selected"{% endif %}>{% trans %}עם תמונות{% endtrans %}</option>
								{% endif %}
								<option value="lastActivity"{% if filter == 'lastActivity' or filter == '' %} selected="selected"{% endif %}>{% trans %}ביקור אחרון{% endtrans %}</option>
{#
								<option value="popularity"{% if filter == 'popularity' %} selected="selected"{% endif %}>{% trans %}פופולריות{% endtrans %}</option>
#}
							</select>
						</div>
					</div>
				</div>

			{% endif %}
			<form action="{{ app.request.requesturi }}" method="post" id="search_filter_form">
				<input type="hidden" name="is_mobile" value="0" />

				{% if data is defined %}
					{% for key,value in data %}
						{% if data[key] is iterable %}
							{% for key2,value2 in data[key] %}
								<input type="hidden" name="advanced_search[{{ key }}][{{ key2 }}]" value="{{ value2 }}" />
							{% endfor %}
						{% else %}
							<input type="hidden" name="advanced_search[{{ key }}]" value="{{ value }}" id="advanced_search_{{ key }}" />
						{% endif %}
					{% endfor %}
				{% else %}
					<input type="hidden" name="advanced_search[filter]" value="{{ filter }}" id="advanced_search_filter" />
				{% endif %}

				<input type="submit" class="hidden">

			</form>

			{% if app.user %}
				<input type="hidden" id="page" value="2">
				<div class="desktop_results">
					{{ include ('frontend/user/users_list.html.twig') }}
				</div>
			{% else %}
				<input type="hidden" id="page" value="2">
				<div class="desktop_results">
					{{ include ('frontend/user/users_public_list.html.twig') }}
				</div>
				{# {{ include ('frontend/user/users_mobile.html.twig') }} #}
				{#<div class="pages usersResults">
					{% if data.filter != 'popularity' %}
						{{ knp_pagination_render(users) }}
					{% endif %}
				</div>#}
			{% endif %}


		</div>
	</div>

	<script>
		jQuery(document).ready(function ($) {
			if ($('.nymain_mobile').css('display') == 'block' || $(window).width() < 641) {
				$('#search_filter_form input[name="is_mobile"]').val(1);
			}
		});
	</script>
{% endblock %}

{% block mobile_content %}
	{{ include ('frontend/user/users_mobile.html.twig') }}
{% endblock %}
