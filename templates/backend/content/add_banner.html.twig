{% extends "backend/layout.html.twig" %}

{% block content %}

    {{ include('backend/header.html.twig', { 'header': 'תוכן', 'icon': 'text file' }) }}

    <div class="page_content">

        {#        {% if page.id > 0 %}#}

        {#        <a href="{{ path('admin_content') }}" class="link" style="margin-right: 30px;">#}
